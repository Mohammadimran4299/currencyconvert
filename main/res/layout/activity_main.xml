<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/cto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:text="From Currency"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:text="To Currency"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinerfrom"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

        <Spinner
            android:id="@+id/spinerto"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Amount"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/entervalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Enter Amount"
            android:inputType="numberDecimal"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_one"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@id/btn_two"
                android:background="@color/colorPrimary"
                android:text="1"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_two"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:text="2"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_three"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/btn_two"
                android:background="@color/colorPrimary"
                android:text="3"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_four"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@id/btn_five"
                android:background="@color/colorPrimary"
                android:text="4"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_five"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:text="5"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_six"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/btn_five"
                android:background="@color/colorPrimary"
                android:text="6"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_seven"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@id/btn_eight"
                android:background="@color/colorPrimary"
                android:text="7"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_eight"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:text="8"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_nine"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/btn_eight"
                android:background="@color/colorPrimary"
                android:text="9"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_point"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@id/btn_zero"
            android:background="@color/colorPrimary"
            android:text="."
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_zero"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/btn_zero"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/btn_sumbit"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimaryDark"
            android:text="Check now"
            android:textAllCaps="false" />


    </RelativeLayout>

</LinearLayout>