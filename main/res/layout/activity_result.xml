<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main">

    <TextView
        android:id="@+id/fromcur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Amount from"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/txt_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="false"
        android:textColorHighlight="@color/colorAccent" />

    <TextView
        android:id="@+id/tocurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Amount To"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/txt_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:outlineAmbientShadowColor="@color/colorPrimaryDark" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/invoice_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="20dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="15dp"
            android:text="Take a picture go invoice to save this" />

        <ImageButton
            android:id="@+id/btn_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@id/text"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_photo_camera_black_24dp">

        </ImageButton>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_below="@+id/invoice_image"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimaryDark"
            android:text="Save This"
            android:textAllCaps="false"
            android:textSize="18sp" />
    </RelativeLayout>


</LinearLayout>